//REVERSE AN ARRAY

void array(int a[],int number){
    int j[number];
for(int i=number-1 ;i>=0;i--){
    j[number-1-i]=a[i];
    cout<<j[number-1-i]<<" ";
}
}
int main(){
    int arr[4]={1,2,3,4};
    array(arr,4);

}
