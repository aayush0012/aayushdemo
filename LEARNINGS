//give an integer n return the difference bw the product and the sum 
int main(){
    int n;
    cout<<"enter the value of n";
    cin>>n;
    
    int sum=0;
    int k=0;
    while(n!=0){
    if (n&1){
        sum++;
    }
    n=n>>1;
    
    }
