
#include<iostream>
#include<math.h>
using namespace std;
// mini calulator program using switch statement
int main(){
   int a;
   int b;
   cout<<"enter a"<<endl;
   cin>>a;
   cout<<"enter b"<<endl;
   cin>>b;
   int n;
   cout<<"addition-1\n subtraction-2\n multiplication-3\n division-4\n"<<endl;
   cin>>n;
   switch(n){
      case 1:cout<<a+b<<endl;
      break;
      case 2: cout<<a-b<<endl;
      break;
      case 3: cout<<a*b<<endl;
      break;
      case 4: cout<<a/b<<endl;
      break;
   }

}
